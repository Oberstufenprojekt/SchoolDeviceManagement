@model SchoolDeviceManagementWebApp.ViewModels.IndexTables

@{
    ViewData["Title"] = "Dashboard";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="modal fade" id="modalSettingsForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4>Dashboard Settings</h4>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @for (int i = 1; i < 4; i++)
            {
            <div class="modal-body mx-3">
                <label for="sel1"id="@i">@i Tabelle</label>
                <select class="form-control border border-dark" required>
                    @foreach (var item in Model.TypeTables)
                            {
                    <option>@item</option>
                }
                </select>
            </div>
}
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-dark">Save</button>
            </div>
        </div>
    </div>
</div>


<div class="col-12">
    <div class="text-right">
        <a href="" class="btn btn-dark mb-4 " data-toggle="modal" data-target="#modalSettingsForm">Launch Settings modal</a>
    </div>
</div>
<!--test Table to demonstrate-->

<div class="container">
    <div>
        <h3>Freie Geräte</h3>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <td class="border border-light">Seriennummer</td>
                    <td class="border border-light">Typ</td>
                    <td class="border border-light">Marke</td>
                    <td class="border border-light">Modell</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var device in Model.AllDevices)
                {
                <tr>
                    <td>@device.SerialNumber</td>
                    <td>@device.Type</td>
                    <td>@device.Brand.BrandName</td>
                    <td>@device.Model</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>


