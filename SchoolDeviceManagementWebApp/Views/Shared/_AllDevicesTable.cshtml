@model SchoolDeviceManagementWebApp.ViewModels.IndexTables
@{
    ViewData["Title"] = "Alle Geräte";
}

<div>
    <h3>@ViewData["Title"]</h3>
</div>

<div class="container">
    <div style="max-height:300px; overflow:auto">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <td class="border border-light">Seriennummer</td>
                    <td class="border border-light">Typ</td>
                    <td class="border border-light">Marke</td>
                    <td class="border border-light">Modell</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model.AllDevices)
                {
                    <tr>
                        <td>@device.SerialNumber</td>
                        <td>@device.Type</td>
                        <td>@device.Brand.BrandName</td>
                        <td>@device.Model</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>