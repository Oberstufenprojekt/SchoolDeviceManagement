

@{
    ViewData["Title"] = "Ausgeliehene Geräte";
}

<div>
    <h3>@ViewData["Title"]</h3>
</div>

<div class="container">
    <div style="max-height: 300px; overflow: auto">
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <td class="border border-light">Seriennummer</td>
                <td class="border border-light">Typ</td>
                <td class="border border-light">Marke</td>
                <td class="border border-light">Modell</td>  
                <td class="border border-light">Ausgeliehen von</td>
                <td class="border border-light">Ausgeliehen bis</td>
            </tr>
            </thead>
            <tbody>
            @foreach(var device in Model.AssignedDevicesNow)
    {
        <tr>
            <td>@device.SerialNumber</td>
            <td>@device.Type</td>
            <td>@device.Brand</td>
            <td>@device.Model</td>
            <td>@device.AssignedFrom</td>
            <td>@device.AssignedUntil</td>
        </tr>
    }
            
            </tbody>
        </table>
    </div>
</div>